{
  // ========================================
  // üê≥ DEV CONTAINER MODE ACTIVE
  // ========================================
  // You're using the VSCode Dev Container (Docker-based)
  // - Isolated environment, matches CI exactly
  // - Zero local setup needed
  // - Slightly slower than native
  //
  // Want Workspace mode instead?
  // 1. F1 ‚Üí "Dev Containers: Reopen Folder Locally"
  // 2. Open: cable_modem_monitor.code-workspace
  // 3. Run: ./scripts/setup.sh
  //
  // See WORKSPACE_VS_CONTAINER.md for comparison
  // ========================================

  // Display name for the Dev Container
  "name": "Cable Modem Monitor Development",

  // Build the container using a custom Dockerfile
  "build": {
    "dockerfile": "Dockerfile",       // Use Dockerfile in this folder
    "context": ".."                   // Build context is the parent directory
  },

  // Explicitly mount the workspace folder
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/cable_modem_monitor,type=bind",

  // Folder inside the container where VS Code opens the workspace
  "workspaceFolder": "/workspaces/cable_modem_monitor",

  // VS Code customizations for extensions and settings
  "customizations": {
    "vscode": {
      "extensions": [
        // Python support and language server
        "ms-python.python",
        "ms-python.vscode-pylance",

        // Formatters and linters
        "ms-python.black-formatter",
        "charliermarsh.ruff",

        // YAML and spell checking
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",

        // CodeQL security testing (extensions removed, tests run via pre-commit)
      ],
      "settings": {
        // Use Python 3.12 inside the container
        "python.defaultInterpreterPath": "/usr/local/bin/python3.12",

        // Enable linting and configure Ruff
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": false,
        "python.linting.lintOnSave": true,
        "python.linting.ruffEnabled": true,
        "python.linting.ruffArgs": [
          "--config",
          "pyproject.toml"
        ],

        // Enable formatting on save using Black
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",

        // Python-specific formatting and import organization
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "ms-python.black-formatter"
        },

        // Enable pytest and configure test discovery
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "tests",
          "-v",
          "--tb=short"
        ],
        "python.testing.autoTestDiscoverOnSaveEnabled": true,

        // Configure Black formatter path and interpreter
        "black-formatter.interpreter": [
          "/usr/local/bin/python3.12"
        ],
        "black-formatter.path": [
          "black"
        ]
      }
    }
  },

  // NOTE: Port forwarding is handled by docker-compose, not by VS Code
  // The HA container exposes port 8123 and VS Code will auto-detect it

  // Enable Docker-in-Docker for running docker commands inside the container
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": false
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  // Mount Docker socket from host (fallback method)
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  // Pass the host workspace path as an environment variable
  // This allows docker-compose to use the correct path for volume mounts
  "remoteEnv": {
    "HOST_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },

  // Post-create command to install Python dependencies and CodeQL CLI
  // This runs once when the container is first created
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Post-start command to show welcome message
  // This runs every time the container starts (after reboot, etc.)
  "postStartCommand": "bash .devcontainer/post-start.sh",

  // Use root user inside the container (required for docker-in-docker)
  "remoteUser": "root"
}

#!/usr/bin/env bash
# Pre-push hook: Run full project checks before pushing
# Install: cp scripts/hooks/pre-push .git/hooks/ && chmod +x .git/hooks/pre-push

set -e

echo "Running pre-push checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Find Python - prefer pyenv, fall back to system
if command -v pyenv &> /dev/null && pyenv versions --bare | grep -q "3.12"; then
    PYTHON="PYENV_VERSION=3.12.12 python"
else
    PYTHON="python3"
fi

echo -e "${YELLOW}1/2 Running ruff on entire project...${NC}"
if ! eval "$PYTHON -m ruff check ."; then
    echo -e "${RED}Ruff check failed. Fix errors before pushing.${NC}"
    exit 1
fi
echo -e "${GREEN}Ruff passed.${NC}"

echo -e "${YELLOW}2/2 Running pytest...${NC}"
if ! eval "$PYTHON -m pytest --tb=short -q"; then
    echo -e "${RED}Tests failed. Fix errors before pushing.${NC}"
    exit 1
fi
echo -e "${GREEN}Tests passed.${NC}"

echo -e "${GREEN}All pre-push checks passed!${NC}"

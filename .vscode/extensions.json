{
  // Recommended VS Code extensions for Cable Modem Monitor development
  "recommendations": [
    // Python development
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-python.black-formatter",
    "charliermarsh.ruff",

    // Security and code quality
    "github.vscode-codeql",

    // Git and version control
    "eamodio.gitlens",

    // YAML (for Home Assistant configs and workflows)
    "redhat.vscode-yaml",

    // Markdown (for documentation)
    "yzhang.markdown-all-in-one",

    // DevContainers (if using the container)
    "ms-vscode-remote.remote-containers"
  ],

  // Extensions that are not needed or conflict with project setup
  "unwantedRecommendations": [
    // Replaced by Ruff (modern, fast linter)
    "ms-python.pylint",
    "ms-python.flake8",
    "ms-python.isort",
    "pycqa.pylint",

    // Conflicts with native Python testing
    "littlefoxteam.vscode-python-test-adapter",
    "hbenl.vscode-test-explorer",

    // Conflicts with Black formatter
    "ms-python.autopep8"
  ]
}
